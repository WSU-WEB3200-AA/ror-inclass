<h1>IRIS Flowers</h1>
<%= link_to 'Sort by SL', pages_sort_by_sepal_length_path %>
<table class="table">
  <thead>
    <tr>
      <th>SL</th>
      <th>SW</th>
      <th>PL</th>
      <th>PW</th>
      <th>S</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @flowers.each do |flower|%>
    <tr>
      <td><%= flower.sepal_length%></td>
      <td><%= flower.sepal_width%></td>
      <td><%= flower.petal_length%></td>
      <td><%= flower.petal_width %></td>
      <td><%= flower.species%></td>
      <td><%= link_to "Edit", edit_flower_path(flower) %></td>
    </tr>

    <% unless flower.notes.blank? %>
      <tr>
        <td colspan="6"><%= flower.notes %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

